generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ----------------- Users -----------------
model User {
  id               Int                       @id @default(autoincrement())
  username         String                    @unique
  name             String
  password         String
  bio              String?
  createdAt        DateTime                  @default(now())
  sentMessages     Message[]                 @relation("SentMessages")
  conversations    ConversationParticipant[] @relation("Participants")
  profilepic       String?
}

// ----------------- Messages -----------------
model Message {
  id             Int          @id @default(autoincrement())
  senderId       Int
  sender         User         @relation("SentMessages", fields: [senderId], references: [id])
  content        String
  createdAt      DateTime     @default(now())
  conversationId Int
  conversation   Conversation @relation("ConversationMessages", fields: [conversationId], references: [id])
}

// ----------------- Conversations -----------------
model Conversation {
  id             Int                       @id @default(autoincrement())
  createdAt      DateTime                  @default(now())
  lastMessageAt  DateTime?
  type           ConversationType          @default(DIRECT) // <-- NEW
  name           String?                   // group name (null for direct chats)
  avatar         String?                    



  messages       Message[]                 @relation("ConversationMessages")
  participants   ConversationParticipant[]
}


enum ConversationType {
  DIRECT     // 1-1
  GROUP      // multi
}

// ----------------- Conversation Participants -----------------
model ConversationParticipant {
  id             Int          @id @default(autoincrement())
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  userId         Int
  user           User         @relation("Participants", fields: [userId], references: [id])
}

// ----------------- Sessions -----------------
model Session {
  id        String   @id @default(uuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
}
